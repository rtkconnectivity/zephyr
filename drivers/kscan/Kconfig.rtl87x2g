config KSCAN_RTL87X2G
	bool "RTL87X2G MCU kscan driver"
	default y
	depends on DT_HAS_REALTEK_RTL87X2G_KSCAN_ENABLED
	depends on !INPUT_RTL87X2G_KSCAN
	select USE_HAL_REALTEK_KEYSCAN
	help
	  Enable the RTL87X2G kscan driver.

if KSCAN_RTL87X2G
config RTL87X2G_KEYSCAN_MAX_ROW_SIZE
	int "Max row size for rtl87x2g kscan"
	default 12
	help
	  Max row size for rtl87x2g kscan.

config RTL87X2G_KEYSCAN_MAX_COL_SIZE
	int "Max column size for rtl87x2g kscan"
	default 20
	help
	  Max column size for rtl87x2g kscan.

config RTL87X2G_KEYSCAN_GHOST_KEY_FILTER
	bool "Ghost key filter for rtl87x2g kscan"
	default y
	help
	  Ghost key filter for rtl87x2g kscan.

config RTL87X2G_KEYSCAN_SCAN_MODE
	bool "Config scanmode for rtl87x2g kscan"
	default y
	help
	  default is autoscan, else is manual scan.

if !RTL87X2G_KEYSCAN_SCAN_MODE
config RTL87X2G_KEYSCAN_MANUAL_SEL
	int "Setting the Trigger Method"
	default 0
	help
	  0 is bit trigger 1 is key trigger.

endif # RTL87X2G_KEYSCAN_SCAN_MODE

if !RTL87X2G_KEYSCAN_SCAN_MODE
config RTL87X2G_KEYSCAN_MANUAL_SCAN_INTERVAL_MSEC
	int "Scan Interval when using manual mode"
	default 50
	help
	  Scan Interval when using manual mode.

endif # RTL87X2G_KEYSCAN_SCAN_MODE

endif # KSCAN_RTL87X2G
